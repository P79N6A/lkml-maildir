> -#  define ALIGN __attribute__((aligned))
> +#ifndef IRDA_ALIGN
> +#  define IRDA_ALIGN __attribute__((aligned))
>  #endif
>  #ifndef PACK
>  #  define PACK __attribute__((packed))
