 			if ((kvirt & (SHMLBA - 1)) != (addr & (SHMLBA - 1))) {
 				unsigned long koff, aoff;
 
+				/* Address needs adjusting which can't be done
+				 * for MAP_FIXED
+				 */
+				if (flags & MAP_FIXED)
+					return -EINVAL;
+
 				koff = kvirt & (SHMLBA - 1);
 				aoff = addr & (SHMLBA - 1);
 				if (koff < aoff)
