@@ -1324,6 +1318,15 @@
 extern void init_timervecs (void);
+static void fill_tslice_map(void)
+{
+    int i;
+
+    for (i = 0; i < NICE_RANGE; i++)
+        ts_table[i] = ((MIN_NICE_TSLICE +
+                        ((MAX_NICE_TSLICE - MIN_NICE_TSLICE) / NICE_RANGE) * i) * HZ) / 1000000;
+}
