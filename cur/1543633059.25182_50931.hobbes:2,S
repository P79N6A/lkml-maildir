       bool         'CPU Enumeration Only' CONFIG_ACPI_HT_ONLY
     fi
 
-    if [ "$CONFIG_ACPI_HT_ONLY" = "y" ]; then
-      define_bool CONFIG_ACPI_BOOT		y
-    else
-      define_bool CONFIG_ACPI_BOOT		y
+    define_bool CONFIG_ACPI_BOOT		y
+
+    if [ "$CONFIG_ACPI_HT_ONLY" != "y" ]; then
       define_bool CONFIG_ACPI_BUS		y
       define_bool CONFIG_ACPI_INTERPRETER	y
       define_bool CONFIG_ACPI_EC		y
