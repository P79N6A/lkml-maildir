+		int ht_nodeid = c->initial_apicid;
 
 		if (ht_nodeid >= 0 &&
 		    apicid_to_node[ht_nodeid] != NUMA_NO_NODE)
@@ -949,8 +949,9 @@ static void __cpuinit early_identify_cpu
 		c->x86 = 4;
 	}
 
