Hi!
Head.s contains some ugly #ifdefs for no good reason. This adds few
bytes to kernel, but removes ugly #ifdefs. Please apply.
								Pavel
--- linux/arch/i386/kernel/head.S.orif	Sat Aug  5 17:14:48 2000
+++ linux/arch/i386/kernel/head.S	Sat Aug  5 17:17:51 2000
@@ -169,9 +169,7 @@
 	rep
 	movsl
 1:
-#ifdef CONFIG_SMP
 checkCPUtype:
-#endif
 
 	movl $-1,X86_CPUID		#  -1 for no CPUID initially
 
@@ -264,9 +262,7 @@
 	orl $2,%eax		# set MP
 2:	movl %eax,%cr0
 	call check_x87
-#ifdef CONFIG_SMP
 	incb ready
-#endif
 	lgdt gdt_descr
 	lidt idt_descr
 	ljmp $(__KERNEL_CS),$1f
@@ -298,9 +294,7 @@
 	jmp L6			# main should never return here, but
 				# just in case, we know what happens.
 
-#ifdef CONFIG_SMP
 ready:	.byte 0
-#endif
 
