+asmlinkage long sys_vperfctr_open(int tid, int creat)
+{
+       struct file *filp;
+       struct task_struct *tsk;
+       struct vperfctr *perfctr;
+       int err;
+       int fd;
+
+       if (!vperfctr_fs_init_done())
+               return -ENODEV;
+       filp = vperfctr_get_filp();
+       if (!filp)
+               return -ENOMEM;
+       err = fd = get_unused_fd();
