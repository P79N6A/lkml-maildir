 ROOT_DEV = CURRENT
 
-KERNELRELEASE=$(VERSION).$(PATCHLEVEL).$(SUBLEVEL)$(EXTRAVERSION)
+# Test for SMP
+ifdef CONFIG_SMP
+SMPVERSION="-SMP"
+else
+SMPVERSION=
+endif
+
+KERNELRELEASE=$(VERSION).$(PATCHLEVEL).$(SUBLEVEL)$(EXTRAVERSION)$(SMPVERSION)
 
