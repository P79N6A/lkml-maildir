> Would the following be what you had intended?
> 
> 	#include <linux/io.h>
> 	#include <stdio.h>
> 	#include <stdlib.h>
> 
> 	int main(int argc, char **argv) {
> 	    int byte, port, result = 0;
	    iopl(3);
> 
> 	    switch (argc) {
> 		case 2:
> 		    port = atoi(argv[1]);
> 		    result = inb(port);
> 		    break;
> 
> 		case 3:
> 		    port = atoi(argv[1]);
> 		    byte = atoi(argv[2]);
> 		    outb(port, byte);
> 		    break;
> 
> 		default:
> 		    fprintf(stderr, "Usage: %s port [byte]\n", argv[0]);
> 		    break;
> 	    }
> 	    return result;
> 	}
