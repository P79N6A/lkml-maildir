>    INPUT=SYS$SYSTEM:[etc]inittab -
>    OUTPUT=SYS$SYSTEM:[var.log]startup.log -
>    ERROR=SYS$SYSTEM:[dev]console -
>    UIC=[0,0] -
>    PRIV=(NOALL, TMPMBX, NETMBX, SETPRV)
