 	if (dev->bus && dev->bus->suspend && !dev->power.power_state.event) {
 		dev_dbg(dev, "suspending\n");
 		error = dev->bus->suspend(dev, state);
+		if (!irqs_disabled()) {
+			printk(KERN_EMERG "WARNING: Interrupts reenabled while suspending 
device %s.\n",
+				kobject_name(&dev->kobj));
+			local_irq_disable();
+		}
 	}
 	up(&dev->sem);
 	return error;
