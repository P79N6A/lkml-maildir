> > > +		if ( !( retval = devfs_fill_file (inode, &dummy, NULL)))
> > > +		   retval = -ENOTBLK;
> > > +		if ( retval < 0) dummy.f_op = get_blkfops(MAJOR(dev));
> > >  		if (!dummy.f_op)
> > >  			goto dput_and_out;
