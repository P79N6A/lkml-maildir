--- 863,875 ----
  gdt_48:
  	.word	0x800		! gdt limit=2048, 256 GDT entries
  	.word	512+gdt,0x9	! gdt base = 0X9xxxx
+ 
+ ! 0xe820 memory map block
+ !
+ e820rec:
+ 	.word	0,0,0,0		! base address
+ 	.word	0,0,0,0		! length in bytes
+ 	.word	0,0		! type of address range
  
