+#define WARN_ON_ONCE(condition)		\
+do {					\
+	static int warn_once = 1;	\
+					\
+	if (warn_once && (condition)) {	\
+		warn_once = 0;		\
+		WARN_ON(1);		\
+	}				\
+} while (0)
+
 #endif
