@@ -115,6 +115,8 @@ extern unsigned char aux_device_present;
 #define AUX_DISABLE_DEV		0xF5	/* Disable aux device */
 #define AUX_RESET		0xFF	/* Reset aux device */
 
+#define AUX_ACK			0xFA	/* Command byte ACK. */
+
 #define AUX_BUF_SIZE		2048
 
 struct aux_queue {
