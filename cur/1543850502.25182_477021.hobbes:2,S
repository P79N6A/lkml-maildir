> > +     struct buffer_head *c_bh[nr_bhs];
> >       int err, n, copy;
> >
> > +     /* Always wait if mounted -o sync */
> > +     if (sb->s_flags & MS_SYNCHRONOUS ) {
> > +       wait = 1;
> > +     }
