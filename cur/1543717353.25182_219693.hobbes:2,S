+
 #ifndef LOAD_OFFSET
 #define LOAD_OFFSET 0
 #endif
 
+#if defined(CONFIG_H8300) || defined(CONFIG_V850)
+#define SYMBOL(_sym_) _##_sym_
+#else
+#define SYMBOL(_sym_) _sym_
+#endif
+
