+		inode->u.ext2_i.i_next_alloc_block = new_block;
+		inode->u.ext2_i.i_next_alloc_goal = tmp;
+	}
+
 	inode->i_ctime = CURRENT_TIME;
 	inode->i_blocks += blocks;
 	if (IS_SYNC(inode) || inode->u.ext2_i.i_osync)
