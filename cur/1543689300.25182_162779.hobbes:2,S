| -			"\n\n");
| -	} else
| -		printf("\n\n"
| -			"Your kernel configuration changes were NOT saved."
| -			"\n\n");
| +	while (1) {
| +		/*
| +		 * Config dialog
| +		 */
| +		conf(&rootmenu);
| +
| +		/*
| +		 * Really quit?
| +		 */
| +		do {
| +			cprint_init();
| +			cprint("--title");
| +			cprint("Save configuration");
| +			cprint("--radiolist");
| +			cprint(radiolist_instructions);
| +			cprint("15");
| +			cprint("70");
| +			cprint("6");
| +
| +			cprint("continue");
| +			cprint("Continue with configuation");
| +			cprint("ON");
| +
| +			cprint("save");
| +			cprint("Save .config and exit");
| +			cprint("OFF");
| +
| +			cprint("exit");
| +			cprint("Don't save .config and exit");
| +			cprint("OFF");
| +
| +			stat = exec_conf();
| +		} while (stat < 0);
| +
| +		if(!strcmp(input_buf, "save")) {
| +			conf_write(NULL);
| +			printf("\n\n"
| +				"*** End of Linux kernel configuration.\n"
| +				"*** Execute 'make' to build the kernel or try 'make help'."
| +				"\n\n");
| +			return 0;
| +		}
| +		if(!strcmp(input_buf, "exit")) {
| +			printf("\n\n"
| +				"Your kernel configuration changes were NOT saved."
| +				"\n\n");
| +			return 0;
| +		}
| +	}
| 
|  	return 0;
|  }
Yes, that works nicely.  Merge and ship it!
