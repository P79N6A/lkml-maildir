 	server->flags    = data->flags & NFS_MOUNT_FLAGMASK;
 
 	server->acregmin = data->acregmin*HZ;
@@ -1619,9 +1621,9 @@ static int nfs4_fill_super(struct super_
 	sb->s_blocksize = 0;
 	server = NFS_SB(sb);
