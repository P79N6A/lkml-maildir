>  				break;
> 
> -	if (i == hid->maxcollection)
> +	if (i == hid->maxcollection && (hid->quirks & HID_QUIRK_HIDINPUT) == 0)
>  		return -1;
> 
>  	if (hid->quirks & HID_QUIRK_SKIP_OUTPUT_REPORTS)
