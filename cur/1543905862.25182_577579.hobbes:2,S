+++ linux-2.6.23-rc1-mm1-b/include/asm-m32r/thread_info.h	2007-07-31 15:08:17.000000000 +0200
@@ -100,9 +100,8 @@ static inline struct thread_info *curren
 	({							\
 		struct thread_info *ret;			\
 	 							\
-	 	ret = kmalloc(THREAD_SIZE, GFP_KERNEL);		\
