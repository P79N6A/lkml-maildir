@@ -37,3 +37,9 @@ static int num_zones(void)
 	return result;
 }
 
+static int pages_for_zone(struct zone *zone)
+{
+	return (zone->spanned_pages + (PAGE_SIZE << 3) - 1) /
+			(PAGE_SIZE << 3);
+}
+
