Do you like this one?
/*
 * We use this if we don't have any better
 * idle routine..
 */
void default_idle(void)
{
        if (current_cpu_data.hlt_works_ok && !hlt_counter) {
                __cli();
                if (!current->need_resched)
                        safe_halt();
                else
                        __sti();
        }
}
