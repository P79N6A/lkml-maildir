> +static void __remove_section(struct zone *zone, unsigned long
> section_nr)
> +{
> +       if (!valid_section_nr(section_nr))
> +               return;
> +
> +       unregister_memory_section(__nr_to_section(section_nr));
> +       sparse_remove_one_section(zone, section_nr);
