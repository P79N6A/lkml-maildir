+	tw32(GRC_LOCAL_CTRL,
+	     tr32(GRC_LOCAL_CTRL) | GRC_LCLCTRL_AUTO_SEEPROM);
 	udelay(100);
 
 	for (i = 0; i < 256; i += 4) {
 		u32 tmp;
 		u16 stat;
-		int limit = 5000;
+		unsigned int limit = 100000;
 
 		pci_write_config_word(tp->pdev, TG3PCI_VPD_ADDR_FLAG, i);
 		while (--limit) {
@@ -4188,6 +4190,8 @@
 		}
 		if (!limit)
 			return -EBUSY;
+		if (limit < smallest_limit)
+			smallest_limit = limit;
 
