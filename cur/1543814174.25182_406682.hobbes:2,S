> > > > +	struct {
> > > > +		unsigned int  read     :1;   /* read allowed */
> > > > +		unsigned int  write    :1;   /* write allowed */
> > > > +		unsigned int  hubid    :6;   /* hub id - unused */
> > > > +		unsigned int  rsvd     :4;   /* reserved */
