 	{"XYRATEX", "RS", "*", BLIST_SPARSELUN | BLIST_LARGELUN},
 	{"NEC", "iStorage", "*", BLIST_SPARSELUN | BLIST_LARGELUN | BLIST_FORCELUN},
+        {"IBM", "2105800", "*", BLIST_SPARSELUN},
+        {"IBM", "2105F20", "*", BLIST_SPARSELUN},
