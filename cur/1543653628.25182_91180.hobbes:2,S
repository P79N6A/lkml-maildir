-	.long sys_ni_syscall	/* reserved for streams2 */
+	.long sys_getpmsg	/* streams1 */
+	.long sys_putpmsg	/* streams2 */
 	.long sys_vfork		/* 190 */
 	.long sys_getrlimit
 	.long sys_mmap2
