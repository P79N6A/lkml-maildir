+void proc_uptime_fill_inode(struct inode *in, int fill)
+{
+
struct timeval tv;
+
+	if (fill)
+	{
+	/* Thats where I got a little bit
confused. 
+	   So many to choose from .... */
+
+	/*	do_gettimeofday(&tv);
??? */ 
+	/*	get_fast_time(&tv); ??? */
+	/*	do_get_fast_time(&tv); ???
*/
+
+	/* I'll take this one because of the friendly name :-) */
+
do_gettimeofday(&tv);
+
+		in->i_mtime = tv.tv_sec- (jiffies /
HZ)-suspended_seconds;
+	}
+}
