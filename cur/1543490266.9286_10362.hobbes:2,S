---
linux-2.2.2.original/arch/i386/kernel/apm.c	Fri Jan 15 07:57:25 1999
+++
linux-2.2.2/arch/i386/kernel/apm.c	Tue Mar 16 16:00:49 1999
@@ -777,6
+777,7 @@
 {
 	unsigned long	flags;
 	int		err;
+	unsigned long
suspend_time;
 
 #ifndef CONFIG_APM_RTC_IS_GMT
 	/*
@@ -789,6 +790,7 @@
got_clock_diff = 1;
 	restore_flags(flags);
 #endif
+
suspend_time=CURRENT_TIME;
 
 	err =
apm_set_power_state(APM_STATE_SUSPEND);
 	if (err)
@@ -806,6 +808,7 @@
restore_flags(flags);
 #endif
 	set_time();
+
suspended_seconds=CURRENT_TIME-suspend_time;
 }
 
 static void
standby(void)
