> > > > @@ -560,7 +560,8 @@
> > > >  	*p = *current;
> > > > 
> > > >  	retval = -EAGAIN;
> > > > -	if (atomic_read(&p->user->processes) >= p->rlim[RLIMIT_NPROC].rlim_cur)
> > > > +	if (p->user->uid &&
