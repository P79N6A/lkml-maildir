  *			 IBM Corporation
@@ -305,9 +305,9 @@
 		return count;
 
 	i = simple_strtoul(buf, &tmp, 16);
-	if (i == 0 && cdev->drv->set_online)
+	if (i == 1 && cdev->drv->set_online)
 		ccw_device_set_online(cdev);
-	else if (i == 1 && cdev->drv->set_offline)
+	else if (i == 0 && cdev->drv->set_offline)
 		ccw_device_set_offline(cdev);
 	else
 		return -EINVAL;
