+
+int show_swap_usage(void)
+{
+    struct task_struct *p = NULL;
+    
+    for_each_task(p)
+    {
+	if(p != NULL)
+	{
+	    if(p->pid != 1)
+	    {
+		if(p->mm != NULL)
+		{
+		    if(p->nswap > 0)
+		    {
+			printk(KERN_CRIT"Process name: %s pid %d\n",p->comm,p->pid);
+			printk(KERN_CRIT"Nswap: %lu Totalvm %lu Cswap %lu\n",p->nswap,p->mm->total_vm,p->cnswap);
+			return 0;
+		    }
+		}
+	    }
+	}
+    }
+    return 0;
+}	