        /* there is no "jdev" option and journal is on separate device */
-       if( ( !jdev_name || !jdev_name[ 0 ] ) && 
-           SB_ONDISK_JOURNAL_DEVICE( super ) ) {
+       if( ( !jdev_name || !jdev_name[ 0 ] ) ) {
                journal -> j_dev_bd = bdget( kdev_t_to_nr( jdev ) );
                if( journal -> j_dev_bd )
                        result = blkdev_get( journal -> j_dev_bd, 
@@ -1974,9 +1973,6 @@
                return result;
        }
 
