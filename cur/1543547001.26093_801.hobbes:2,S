 	}
 
+	if (flags&MNT_FORCE)
+		quiesce_filesystem(mnt);
+
 	spin_lock(&dcache_lock);
 	if (atomic_read(&mnt->mnt_count) > 2) {
 		spin_unlock(&dcache_lock);
